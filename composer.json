{
    "name": "devzer0x00/data-provider",
    "description": "Data provider",
    "type": "library",
    "license": "proprietary",
    "require": {
        "php": "^8.0",
        "codeception/module-asserts": "^1.0.0",
        "codeception/module-phpbrowser": "^1.0.0",
        "doctrine/collections": "^1.6",
        "doctrine/orm": "^2.9",
        "friendsofphp/php-cs-fixer": "^3.4",
        "symfony/cache": "^6.0",
        "symfony/options-resolver": "^5.1",
        "symfony/property-access": "^5.1"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "DevZer0x00\\DataProvider\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DevZer0x00\\DataProvider\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "([ ! -d './.git' ] && echo 'Git is not initialized. Skip add hooks...') || cghooks add --no-lock",
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "([ ! -d './.git' ] && echo 'Git is not initialized. Skip update hooks...') || cghooks update",
            "@auto-scripts"
        ],
        "cghooks": "vendor/bin/cghooks",
        "cs": "vendor/bin/php-cs-fixer fix -v --diff --dry-run --cache-file .ps_cs.cache",
        "cs-fix": "vendor/bin/php-cs-fixer fix -v --diff --cache-file .ps_cs.cache"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.1.*"
        },
        "hooks": {
            "pre-commit": [
                "docker start dataprovider_app_1 && docker exec dataprovider_app_1 vendor/bin/php-cs-fixer fix -vv --dry-run --stop-on-violation --cache-file .ps_cs.cache"
            ]
        }
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^2.8",
        "codeception/codeception": "^4.1",
        "codeception/module-doctrine2": "^1.1"
    }
}
